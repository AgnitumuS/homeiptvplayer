<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/hud_program_desc_width"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:layout_marginTop="@dimen/hud_program_desc_top_space"
    android:layout_marginBottom="@dimen/hud_program_desc_top_space"
    android:layout_marginEnd="10dp"
    android:background="@color/black_overlay"
    >

    <com.dfsoft.iptvplayer.views.MarqueeTextView
        android:id="@+id/hud_program_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textSize="@dimen/hud_program_desc_title_size"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hud_program_desc_desc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:textSize="@dimen/hud_program_desc_desc_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hud_program_desc_title" />



</androidx.constraintlayout.widget.ConstraintLayout>
